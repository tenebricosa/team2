.weather-full-now {
    padding: 10px;

    &__icon {
        @extends .weather-short-now__icon
    }
    
    &__degree {
        @extends .weather-short-now__degree
        line-height: 1.1;
        vertical-align: top;
    }
    
    &__condensation {
        @extends .weather-short-now__condensation
        margin-left: 0;
        font-size: 15px;
    }
    
    &__condensation:first-letter {
        @extends .weather-short-now__condensation:first-letter
    }
    
    &__update {
        vertical-align: top;
        display: inline-block;
        font-size: 13px;
        margin-left: 10px;
    }
    
    &__additional {
        font-size: 13px;
        margin-left: 72px;
    }
}

.update-full-now__line {
    color: $gray-text-color;
    margin: 0;
}

.additional-full__line {
    @extends .additional-short__line
}

.weather-full {
    &__time {
        @extends .weather-short__time
        color: $main-text-color;
        
        &:first-letter {
            text-transform: capitalize;            
        }
    }
    
    &__icon {
        @extends .weather-short__icon
    }
    
    &__degree {
        @extends .weather-short__degree
    }
    
    &__additional {
        margin-left: 72px;
        
        & .weather-full-now__condensation {
            font-size: 13px;
        }
    }
}
        
.weather-full-now__wind {
    background-image: url('https://yastatic.net/weather-frontend/_/N3n-oDD3MaaMLxl5pQnzNDkEryw.svg');
    background-repeat: no-repeat;
    background-size: cover;
    width: 12px;
    height: 12px;
    opacity: 0.7;
    display: inline-block;
    position: relative;
    top: 2px;
    
    &--s {
        transform: rotate(0);
    }
    
    &--sw {
        transform: rotate(45deg);
    }
    

    &--w {
        transform: rotate(90deg);
    }
    

    &--nw {
        transform: rotate(135deg);
    }
    

    &--n {
        transform: rotate(180deg);
    }
    

    &--ne {
        transform: rotate(-135deg);
    }
    

    &--e {
        transform: rotate(-90deg);
    }
    

    &--se {
        transform: rotate(-45deg);
    }
}
