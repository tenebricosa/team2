////////////
// HEADER
////////////

.header__logo {
    width: 100%;
    border-bottom: 1px solid $border-gray;
    margin: 0 -10px;
    padding: 0 10px;
}

.logo__ya {
    display: inline-block;
    background-image: url('http://yastatic.net/www/2.131/yaru/i/logo.png');
    width: 100px;
    height: 44px;
    vertical-align: middle;
    margin-right: 10px;
}

.logo__weather {
    display: inline-block;
    text-decoration: none;
    color: $main-text-color;
    padding: 4px 7px 4px 12px;
    position: relative;
    border: 2px solid #fc0;
    vertical-align: middle;

    &:hover {
        color: $main-text-color;
        text-decoration: none;
    }

    &::before {
        position: absolute;
        content: '';
        width: 0;
        height: 0;
        right: -10px;
        top: -3px;
        border-color: transparent transparent transparent #fc0;
        border-width: 17px 0 17px 9px;
        border-style: solid;
    }

    &:after {
        position: absolute;
        content: '';
        width: 0;
        height: 0;
        top: -1px;
        right: -8px;
        border-color: transparent transparent transparent #fff;
        border-width: 15px 0 15px 8px;
        border-style: solid;
    }
}

//////////
// CITY SEARCH FORM
//////////
    
.city-search__submit {
    float: left;
}

.city-search__section-link-wrapper {
    font-size: 16px;
    height: 28px;
    line-height: 28px;
    border: 2px solid #FFCA00;
    width: 77px;
    border-right-style: none;
}

.header__city-search-wrapper {
    padding: 5px 15px 5px;
    width: 50%;
}

.city-search__actions-wrapper {
    position relative;
}

.city-search__input {
    border: 1px solid #A6A6A6;
    height: 28px;
    min-width 180px;

    border-left-style: none;

    padding-left: 15px;
    font-size: 15px;
    outline: none;
    padding-right: 32px;

    &:focus {
        box-shadow: 0 0 6px 2px rgba(255, 204, 0, 0.7);
    }
}

.city-search__clear-btn {
    background: url(http://market.yandex.ru/_/K4e4uv8u9I9wb1fi17d8-3Jnr2A.svg) 50% 50% no-repeat;
    width: 32px;
    height: 32px;
    display: block;
    position: absolute;
    top: 0;
    right: 0;
    opacity .3;

    &:hover {
        opacity: 1;
        cursor: pointer;
    }
}

.city-search__submit-btn {
    background-color: rgba(0, 0, 0, 0);
    border: 1px solid #A6A6A6;
    border-left-style: none;
    height: 32px;
    width: 72px;
    font-size: 16px;
    outline: none;
    border-radius: 0 3px 3px 0;

    &:hover {
        cursor: pointer;
    }
}

//////////
// ACCOUNT SECTION
//////////

.header__account-wrapper {
    float: right;
}

.header__user-avatar-wrapper {
    display: inline-block;
}

.header__user-avatar {
    border-radius: 50%;
    border: 1px solid #DFDFDF;
    width: 43px;
}

.header__user-name-wrapper {
    float: right;
    display: inline-block;
    padding: 12px;
}

.user-name__first-letter {
    color: red;
    float: left;
}

.user-name__rest-letters {
    float: left;
}
