body {
    font-family: Arial, Helvetica, sans-serif;
	font-size: 14px;
	line-height: 1.42857143;
	color: $main-text-color;
}

.page__wrapper {
    margin: 0 auto;
    min-width: 290px;
}

a {
	color: $main-text-color;
	text-decoration: none;

	&:hover {
		color: $main-text-color;
		text-decoration: none;
	}
}

.weather {
    position: relative;
    overflow: hidden;
    width: 100%;
    
    &__container {
        padding: 8px 10px;
    }

    &__when {
        font-size: 18px;
        color: $main-text-color;
        padding: 0 10px;
    }
    
    &__when-holiday {
        color: #ff1500;
    }
    
    &__when--weekday {
        display: inline-block;
     
        &:first-letter {
            text-transform: lowercase;
        }   
    }
}
