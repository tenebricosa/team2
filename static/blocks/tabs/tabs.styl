.tabs {
    color: $main-text-color;
    border-radius: 4px;
    padding: 5px 10px;
    width: 100%;
    display: block;
    box-sizing: border-box;
    
    &__item {
        display: inline-block;
        background: #fff;
        border: 1px solid $border-gray;
        margin: 0 -1px 0 0;
        vertical-align: top;
        width: (100/4)%;
        box-sizing: border-box;
        text-align: center;
                
        &:first-child {
            border-top-left-radius: 4px;
            border-bottom-left-radius: 4px;
            overflow: hidden;
        }
        &:last-child {
            border-top-right-radius: 4px;
            border-bottom-right-radius: 4px;
            overflow: hidden;
        }
        
        &.active {
            border: 1px solid #DBC794;
        }
    }
    
    &__link {
        width: 100%;
        display: inline-block;
        font-size: 14px;
        padding: 5px 14px;
        background: #fff;
        vertical-align: top;
        color: $main-text-color;
        box-sizing: border-box;
        
        &:hover,
        &:focus {
            background: $background-gray;
            text-decoration: none;
        }

        .active & {
            background: #FFEAAE;
        }
    }
    
    &-panel {
        display: none;
        
        &.active {
            display:block;
        }
    }
}