.weather-short {
    
    &__time {
        vertical-align: middle;
        color: $gray-text-color;
        display: inline-block;
        width: 72px;
        text-transform: capitalize;
    }
    
    &__icon {
        width: 24px;
        height: 24px;
        display: inline-block;
        background-size: cover;
        vertical-align: middle;
    }
    
    &__degree {
        display: inline-block;
        width: 25px;
        margin-left: 10px;
    }
}

.weather-short-now {
    padding: 10px;
    min-height: 125px;

    &__degree {
        font-size: 48px;
        vertical-align: middle;
    }
    
    &__additional {
        margin-left: 10px;
        font-size: 13px;
        display: inline-block;
        vertical-align: middle;
    }
    
    &__icon {
        width: 48px;
        height: 48px;
        background-size: cover;
        float: left;
    }
    
    &__condensation {
        margin-left: 70px;
    }
    
    &__condensation:first-letter {
        text-transform: capitalize;
    }
    
    &__update {
        display: inline-block;
        vertical-align: top;
        margin-left: 30px;
        color: #808080;
    }
}

.additional-short__line {
    color: $gray-text-color;
    margin: 0;
}