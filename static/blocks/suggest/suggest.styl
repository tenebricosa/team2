.twitter-typeahead {
	display: block !important;
}

.tt-dropdown-menu {
	top: 105% !important;
	left: -26px !important;
	background-color: #fff;
}

.tt-dataset-0 {
	display: inline-block;
	border: 1px solid rgba(0,0,0,0.25);
	margin: 0 25px;
	position: relative;
	font-size: 15px;
	background-clip: padding-box;
	background-color: #fff;
	width: 299px;
	box-shadow: 0px 10px 36px 4px rgba(0, 0, 0, 0.41);
}

.tt-suggestion p {
	position: relative;
	cursor: pointer;
	padding: 5px 16px;
	margin: 0 0 1px 0;
}

.tt-suggestion p:hover {
	background-color: #bcd3ff !important;
}

.tt-suggestion__span {
	color: #999;
	position: absolute;
	right: 15px;
}
