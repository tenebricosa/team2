.forecast-hourly {
    height: 300px;
    position: relative;
    display: flex;
    justify-content: space-between;
    counter-reset: hour -1;
    padding: 0 10px;
    
    &__item {
        position: relative;
        flex: 1;
        margin: 20px 1px 50px;
        counter-increment: hour;
    }
    &__hour {
        position: absolute;
        content: counter(hour, decimal-leading-zero) ":00";
        bottom: 0;
        font-size: 12px;
        text-align: center;
        margin: auto;
        left: 0;
        right: 0;
    }
    
    &__bar {
        width: 100%;
        position: absolute;
    
        &_plus {
            bottom: 0;
        }

        &_minus {
            top: 0;               
        }
    }
    
    &_half {
        .forecast-hourly__bar {
            &_plus {
                bottom: 50%;
            }

            &_minus {
                top: 50%;               
            }
        }
    }
    
    &__text {
        text-align: center;
        position: absolute;
        top: -22px;
        width: 100%;
        font-size: 12px;
        text-indent: -0.3em;
    }

    &__icon {
        width: 24px;
        height: 24px;
        display: inline-block;
        background-size: cover;
        position: absolute;
        bottom: 25px;
        left: 0;
        right: 0;
        margin: auto;
    }
    
}